# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Application Configuration
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false
SECRET_KEY=your-secret-key-here
JWT_SECRET=your-jwt-secret-here
ENCRYPTION_KEY=your-encryption-key-here

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/zalopay_production
MONGODB_DATABASE=zalopay_production
MONGO_ROOT_USERNAME=mongoadmin
MONGO_ROOT_PASSWORD=your-mongo-root-password
MONGO_USERNAME=zalopay_user
MONGO_PASSWORD=your-mongo-password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=your-redis-password

# InfluxDB Configuration
INFLUXDB_URL=http://localhost:8086
INFLUXDB_ORG=zalopay
INFLUXDB_BUCKET=zalopay_metrics
INFLUXDB_USERNAME=influxadmin
INFLUXDB_PASSWORD=your-influx-password
INFLUXDB_TOKEN=your-influx-token

# BeEF Configuration
BEEF_URL=http://localhost:3000
BEEF_USERNAME=beef
BEEF_PASSWORD=your-beef-password

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/api/oauth/google/callback

# Apple OAuth Configuration
APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_PATH=/path/to/apple/AuthKey.p8
APPLE_REDIRECT_URI=https://yourdomain.com/api/oauth/apple/callback

# Facebook OAuth Configuration
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_REDIRECT_URI=https://yourdomain.com/api/oauth/facebook/callback

# External API Keys
CLEARBIT_API_KEY=your-clearbit-api-key
HUNTER_API_KEY=your-hunter-api-key
PROXY_API_KEY=your-proxy-api-key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_USE_TLS=true

# Monitoring Configuration
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000
ELASTICSEARCH_URL=http://localhost:9200
KIBANA_URL=http://localhost:5601

# Alert Configuration
SLACK_WEBHOOK_URL=your-slack-webhook-url
DISCORD_WEBHOOK_URL=your-discord-webhook-url
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Backup Configuration
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1
S3_BUCKET=zalopay-backups

# Security Configuration
CORS_ORIGINS=["http://localhost:3000", "https://zalopay.example.com"]
RATE_LIMIT_PER_MINUTE=100
MAX_UPLOAD_SIZE=50MB
SESSION_TIMEOUT=3600

# Proxy Configuration
PROXY_POOL_SIZE=100
PROXY_ROTATION_INTERVAL=300
PROXY_HEALTH_CHECK_INTERVAL=60

# Machine Learning Configuration
ML_MODEL_PATH=/app/models
ML_PREDICTION_CACHE_TTL=3600
ML_TRAINING_INTERVAL=86400

# Performance Configuration
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1024
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100
